<Window x:Class="MainApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:MainApplication"
        mc:Ignorable="d"
        d:DataContext="{d:DesignData Type=local:MainWindowViewModel}"
        WindowState="Maximized"
        SnapsToDevicePixels="True"
        Title="{Binding MyTitle}"
        Height="850"
        Width="1100"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <system:Double x:Key="{x:Static SystemParameters.HorizontalScrollBarHeightKey}">7</system:Double>
        <system:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">7</system:Double>
        <ContextMenu x:Key="DiagramContextMenu">
            <MenuItem Header="Copy"
                      Command="{x:Static ApplicationCommands.Copy}"
                      InputGestureText="Ctrl + C" />
            <MenuItem Header="Cut"
                      Command="{x:Static ApplicationCommands.Cut}"
                      InputGestureText="Ctrl + X" />
            <MenuItem Header="Paste"
                      Command="{x:Static ApplicationCommands.Paste}"
                      InputGestureText="Ctrl + V" />
            <MenuItem Header="Alignment">
                <MenuItem Header="Align Top"
                          Command="{x:Static local:MainWindowViewModel.AlignTop}"
                          InputGestureText="Ctrl + T" />
                <MenuItem Header="Align Horizontal Center"
                          Command="{x:Static local:MainWindowViewModel.AlignHorizontalCenters}"
                          InputGestureText="Ctrl + E" />
                <MenuItem Header="Align Bottom"
                          Command="{x:Static local:MainWindowViewModel.AlignBottom}"
                          InputGestureText="Ctrl + B" />
                <MenuItem Header="Align Left"
                          Command="{x:Static local:MainWindowViewModel.AlignLeft}"
                          InputGestureText="Ctrl + L" />
                <MenuItem Header="Align Vertical center"
                          Command="{x:Static local:MainWindowViewModel.AlignVerticalCenters}"
                          InputGestureText="Ctrl + M" />
                <MenuItem Header="Align Right"
                          Command="{x:Static local:MainWindowViewModel.AlignRight}"
                          InputGestureText="Ctrl + R" />
                <MenuItem Header="Distribute Horizontal"
                          Command="{x:Static local:MainWindowViewModel.DistributeHorizontal}"
                          InputGestureText="Ctrl + D" />
                <MenuItem Header="Distribute Vertical"
                          Command="{x:Static local:MainWindowViewModel.DistributeVertical}"
                          InputGestureText="Ctrl + Shift + D" />
            </MenuItem>
            <MenuItem Header="Group / Ungroup"
                      Command="{x:Static local:MainWindowViewModel.Group}"
                      InputGestureText="Ctrl + G" />
            <MenuItem Header="Import XML..."
                      Command="{x:Static local:MainWindowViewModel.Import}"
                      InputGestureText="Ctrl + I" />
        </ContextMenu>
    </Window.Resources>

    <DockPanel Margin="0">
        <Grid Margin="0, 5, 0, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ContentControl Content="{StaticResource MyToolbar}"/>
            <Grid Margin="0,5,0,0"
                  Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <ScrollViewer Grid.Column="0">
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                                    Value="Hidden" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                                            Value="Auto" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0"/>
                        <Grid Grid.Row="1"/>
                    </Grid>
                </ScrollViewer>
                <GridSplitter Grid.Column="1"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Stretch"
                              Background="Transparent"
                              Width="3" />
                <Grid Grid.Column="1"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
