<Application x:Class="MainApplication.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MainApplication"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Common MainApplication Styles -->
                <ResourceDictionary Source="Resources/ResourceDictionaries/Shared.xaml" />
                <ResourceDictionary Source="Resources/ResourceDictionaries/ToolBar.xaml" />
                <ResourceDictionary Source="Resources/ResourceDictionaries/ApplicationToolbar.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
