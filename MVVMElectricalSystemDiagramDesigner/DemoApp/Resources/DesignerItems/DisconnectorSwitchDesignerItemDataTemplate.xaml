<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DemoApp">


    <!-- DataTemplate for DesignerCanvas look and feel -->
    <DataTemplate DataType="{x:Type local:DisconnectorSwitchDesignerItemViewModel}">
        <Grid>
            <Image IsHitTestVisible="False"
                   Stretch="Fill"
                   Source="{Binding Path=ImageSource, UpdateSourceTrigger=PropertyChanged}"
                   Tag="disconnectorswitch" />
        </Grid>
    </DataTemplate>

</ResourceDictionary>