<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DemoApp">

    <!-- DataTemplate for DesignerCanvas look and feel -->
    <DataTemplate DataType="{x:Type local:BusbarDesignerItemViewModel}">
        <Grid>
            <Image IsHitTestVisible="False"
                   Stretch="Fill"
                   Source="{Binding ImageSource, UpdateSourceTrigger=PropertyChanged}"
                   Tag="busbar"
                   Width="{Binding ItemWidth}"
                   Height="{Binding ItemHeight}">
            </Image>
        </Grid>
    </DataTemplate>

</ResourceDictionary>